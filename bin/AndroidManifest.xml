<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.catmine"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />
    <!-- 网络访问权限 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 允许查看当前网络状态 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.example.catmine.DemoApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/title"
        android:theme="@style/AppTheme" >
        <activity android:name="com.example.catmine.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.catmine.CitySelect" >
        </activity>
        <activity android:name="com.example.catmine.NewsInfo" >
        </activity>
        <activity android:name="com.example.catmine.ImageInfo" >
        </activity>
        <activity android:name="com.example.catmine.PayRecord" >
        </activity>
        <activity android:name="com.example.catmine.PayRecordHistory" >
        </activity>
        <activity android:name="com.example.catmine.Movies" >
        </activity>
    </application>

</manifest>